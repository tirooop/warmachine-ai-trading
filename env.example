# WarMachine Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# 必需配置 - 系统运行必需
# =============================================================================

# Telegram Bot配置
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id_here

# AI服务配置
AI_API_KEY=your_ai_api_key_here
AI_BASE_URL=https://api.siliconflow.cn

# 安全配置
SECRET_KEY=your_secret_key_here_change_in_production

# =============================================================================
# 数据源配置 - 根据需要启用
# =============================================================================

# Polygon.io (股票数据)
POLYGON_API_KEY=your_polygon_api_key_here

# Tradier (期权数据)
TRADIER_API_KEY=your_tradier_api_key_here

# Binance (加密货币)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here

# Interactive Brokers
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1
IBKR_ACCOUNT=your_ibkr_account_here

# Databento
DATABENTO_API_KEY=your_databento_api_key_here

# Alpha Vantage
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Finnhub
FINNHUB_API_KEY=your_finnhub_api_key_here

# =============================================================================
# 通知服务配置
# =============================================================================

# Discord Bot
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_APPLICATION_ID=your_discord_application_id_here
DISCORD_PUBLIC_KEY=your_discord_public_key_here

# 飞书 Webhook
FEISHU_WEBHOOK_URL=your_feishu_webhook_url_here

# 邮件服务
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email_here
EMAIL_PASSWORD=your_email_app_password_here
EMAIL_FROM_ADDRESS=your_email_here
EMAIL_TO_ADDRESSES=recipient1@example.com,recipient2@example.com

# =============================================================================
# 数据库配置 (可选)
# =============================================================================

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=warmachine
DB_USERNAME=postgres
DB_PASSWORD=your_database_password_here

# Redis (缓存)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# =============================================================================
# 系统配置
# =============================================================================

# 日志级别
LOG_LEVEL=INFO

# 系统环境
ENVIRONMENT=development  # development, staging, production

# Web服务端口
WEB_PORT=8000
WEB_HOST=0.0.0.0

# API服务端口
API_PORT=8001
API_HOST=0.0.0.0

# Webhook端口
WEBHOOK_PORT=8080
WEBHOOK_HOST=0.0.0.0

# =============================================================================
# 交易配置
# =============================================================================

# 默认交易所
DEFAULT_EXCHANGE=UVX

# 风险控制
MAX_POSITION_SIZE=0.1
MAX_TOTAL_RISK=0.2
STOP_LOSS=0.02
TAKE_PROFIT=0.05
MAX_DAILY_TRADES=50
MAX_OPEN_POSITIONS=10

# =============================================================================
# 性能配置
# =============================================================================

# 连接池大小
CONNECTION_POOL_SIZE=10
CACHE_SIZE=1000
CACHE_TTL=300
MAX_WORKERS=4
QUEUE_SIZE=1000

# =============================================================================
# 开发配置
# =============================================================================

# 调试模式
DEBUG=false

# 测试模式
TESTING=false

# 模拟交易
PAPER_TRADING=true

# =============================================================================
# 高级配置
# =============================================================================

# AI模型配置
AI_MODEL=deepseek-ai/DeepSeek-V3
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4000
AI_TOP_P=0.9

# 策略进化配置
EVOLUTION_POPULATION_SIZE=50
EVOLUTION_GENERATION_INTERVAL=3600

# 市场数据配置
MARKET_DATA_CACHE_TTL=300
MARKET_DATA_MAX_RETRIES=3
MARKET_DATA_TIMEOUT=30

# 通知配置
NOTIFICATION_RATE_LIMIT=20
NOTIFICATION_COOLDOWN=60

# =============================================================================
# 第三方服务配置
# =============================================================================

# Cherry Studio MCP Server
MCP_SERVER_HOST=api.cherry-studio.com
MCP_SERVER_PORT=443
MCP_SERVER_API_KEY=your_cherry_studio_api_key_here
MCP_SERVER_USE_SSL=true

# =============================================================================
# 监控配置
# =============================================================================

# 性能监控
PERFORMANCE_MONITORING=true
METRICS_COLLECTION=true

# 健康检查
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# 备份配置
# =============================================================================

# 数据备份
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400  # 24小时
BACKUP_RETENTION_DAYS=30

# =============================================================================
# 安全配置
# =============================================================================

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_FILE=path/to/cert.pem
SSL_KEY_FILE=path/to/key.pem

# 访问控制
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 速率限制
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# 示例配置 (请根据实际情况修改)
# =============================================================================

# 示例: 启用所有数据源
# POLYGON_API_KEY=pk_test_1234567890abcdef
# TRADIER_API_KEY=your_tradier_key
# BINANCE_API_KEY=your_binance_key
# BINANCE_API_SECRET=your_binance_secret

# 示例: 配置Telegram机器人
# TELEGRAM_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
# TELEGRAM_ADMIN_CHAT_ID=123456789

# 示例: 配置AI服务
# AI_API_KEY=sk-zyjlyfqjyuygymvikeamwunbvxjspmlxrcrehylogtnofqlw
# AI_BASE_URL=https://api.siliconflow.cn

# 示例: 配置数据库
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=warmachine
# DB_USERNAME=postgres
# DB_PASSWORD=your_secure_password

# =============================================================================
# 注意事项
# =============================================================================

# 1. 请将所有敏感信息（API密钥、密码等）替换为实际值
# 2. 不要将包含真实密钥的.env文件提交到版本控制系统
# 3. 在生产环境中，请使用更强的密钥和密码
# 4. 定期轮换API密钥和密码
# 5. 确保.env文件的权限设置正确（仅所有者可读） 